
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Registrar egreso</MudText>

        <MudNumericField T="decimal"
                         Label="Monto"
                         @bind-Value="_monto"
                         Min="0"
                         Immediate="true"
                         Variant="Variant.Outlined"
                         Class="mt-3"
                         Adornment="Adornment.Start"
                         AdornmentText="S/" />

        <MudTextField Label="Motivo"
                      @bind-Value="_motivo"
                      Variant="Variant.Outlined"
                      Lines="2"
                      Class="mt-3" />
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Ok">Registrar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = default!;

    private decimal _monto;
    private string _motivo = "";

    private void Cancel() => MudDialog.Cancel();

    private void Ok()
    {
        if (_monto <= 0)
        {
            Snackbar.Add("El monto debe ser mayor a 0.", Severity.Error);
            return;
        }

        if (string.IsNullOrWhiteSpace(_motivo))
        {
            Snackbar.Add("Motivo requerido.", Severity.Error);
            return;
        }

        MudDialog.Close(DialogResult.Ok(new RegistrarEgresoRequest(_monto, _motivo.Trim())));
    }
}
