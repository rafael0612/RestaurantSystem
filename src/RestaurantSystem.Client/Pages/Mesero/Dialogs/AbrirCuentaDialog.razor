
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@Title</MudText>

        <MudSelect T="TipoCuenta" Label="Tipo de cuenta" @bind-Value="_tipo" Class="mt-3">
            <MudSelectItem Value="TipoCuenta.Salon">Salón</MudSelectItem>
            <MudSelectItem Value="TipoCuenta.Llevar">Para llevar</MudSelectItem>
        </MudSelect>

        <MudTextField @bind-Value="_obs" Label="Observación (opcional)" Lines="2" Class="mt-3" />
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Cancelar</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="Ok">Abrir</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string Title { get; set; } = "Abrir cuenta";

    private TipoCuenta _tipo = TipoCuenta.Salon;
    private string? _obs;

    private void Cancel() => MudDialog.Cancel();

    private void Ok()
        => MudDialog.Close(DialogResult.Ok(new Result(_tipo, _obs)));

    public record Result(TipoCuenta Tipo, string? Observacion);
}
