
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">¿Marcar como LISTO?</MudText>
        <MudText Typo="Typo.body2" Class="mt-2">
            El ítem pasará a estado <b>Listo</b>.
        </MudText>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Cancelar</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Ok">Sí, listo</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = default!;
    private void Cancel() => MudDialog.Cancel();
    private void Ok() => MudDialog.Close(DialogResult.Ok(true));
}
